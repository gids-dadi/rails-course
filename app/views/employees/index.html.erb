<div class="container mt-5">

  <h1>Employees List</h1>
   <br/>

  <br/> <br/>
  <a href="<%= employee_new_path %>"> New Employee </a>

  <% if @employees.present? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Department Name</th>
        <th>Country</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname %></td>
          <td><%= employee.lastname %></td>
          <td><%= employee.phone %></td>
          <td><%= employee.email %></td>
          <td><%= employee.department.name%></td>
          <td><%= employee.country.name %></td>
          <td>
            <a href="<%= employee_path(employee)  %>">Details</a> |
            <a href="<%= edit_employee_path(employee) %>">Edit</a> |
            <a href="<%= delete_employee_path(employee) %>">Delete</a> |
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>


</div>