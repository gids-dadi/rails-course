<div class="container mt-5">
  <h1>Delete Employee</h1>
  <h3>Are you sure you want to delete this?</h3>
  <br/>

  <%= form_for @employee, html: { class: "form-horizontal", multipart: true } do |f| %>
  
    <fieldset>
      <div class="form-group row">
        <label>First Name:</label>
        <div>
          <%= f.text_field :firstname, placeholder: "Enter First name", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Last Name:</label>
        <div>
          <%= f.text_field :lastname, placeholder: "Enter Last name", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Has Passport:</label>
        <div>
          <%= f.check_box :haspassport, class: "form-check-input" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Salary:</label>
        <div>
          <%= f.text_field :salary, placeholder: "Enter Salary", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Hire Date:</label>
        <div>
          <%= f.date_field :hiredate, class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Birth Date:</label>
        <div>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <legend class="col-form-label col-sm-2 pt-0">Gender:</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <%= f.radio_button :gender, "Male", checked: true, class: "form-check-input", id: "male" %>
            <label class="form-check-label" for="male">Male</label>
          </div>
          <div class="form-check">
            <%= f.radio_button :gender, "Female", class: "form-check-input", id: "female" %>
            <label class="form-check-label" for="female">Female</label>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Notes:</label>
        <div>
          <%= f.rich_text_area :notes, placeholder: "Enter Notes", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Email:</label>
        <div>
          <%= f.text_area :email, placeholder: "Enter Email", autofocus: true, class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label>Phone Number:</label>
        <div>
          <%= f.text_field :phone, placeholder: "Enter Phone Number", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class=" col-sm-2 control-label">Department:
          <span class="stark">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.select :department_id, options_from_collection_for_select(select_department, :id, :name, f.object.department_id), { include_blank: 'Please Select Department' }, class: "form-control", autofocus: true %>
          
        </div>
        </div>
      </fieldset>

       <fieldset>
      <div class="form-group row">
        <label class=" col-sm-2 control-label">Country:
          <span class="stark">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.select :country_id, options_from_collection_for_select(select_country, :id, :name, f.object.country_id), { include_blank: 'Please Select Country' }, class: "form-control", autofocus: true %>
          
        </div>
        </div>
      </fieldset>

    <div class="form-group mt-4">
      <%= f.submit "Delete Record", { disable_with: 'Deleting...', class: "btn btn-danger" } %>
      <%= link_to "Back To List", employees_path, class: "btn btn-secondary ml-2" %>
    </div>
  <% end %>
</div>
